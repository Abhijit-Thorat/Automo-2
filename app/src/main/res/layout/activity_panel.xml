<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dummy.automo.Panel">
    <com.example.dummy.automo.QTextView
        android:id="@+id/text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:textSize="18dp"
        android:textColor="#000000"
        android:text="Autonomous Object Identification System " />

    <com.example.dummy.automo.QTextView
        android:id="@+id/text4"
        android:layout_width="wrap_content"
        android:textColor="#000000"
        android:textSize="15dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="Library Module 1.0 " />
    <ImageView
        android:id="@+id/bar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/text4"
        android:background="@drawable/bar"
        android:layout_marginTop="10dp"/>

    <com.example.dummy.automo.QEditText
        android:id="@+id/book"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_below="@+id/bar2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:background="@drawable/oval_bg_primary"
        android:gravity="center"

        android:hint="Enter the book name"
        android:lines="1"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff" />


    <Button
        android:id="@+id/getBook"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/book"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="Get Book"
        android:typeface="sans" />

    <com.example.dummy.automo.QTextView
        android:id="@+id/code"
        android:layout_width="wrap_content"
        android:textColor="#000000"
        android:textSize="30dp"
        android:textStyle="bold"

        android:layout_height="wrap_content"
        android:layout_below="@+id/getBook"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text=" " />

    <Button
        android:id="@+id/sendCode"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/code"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="Send Code"
        android:typeface="sans" />

    <WebView
        android:id="@+id/response"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/book"
        android:layout_below="@+id/sendCode"
        android:layout_marginTop="10dp"
        android:visibility="invisible" />

</RelativeLayout>
