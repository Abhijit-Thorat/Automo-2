<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dummy.automo.MainActivity">

    <com.example.dummy.automo.QTextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:textSize="18dp"
        android:textColor="#000000"
        android:text="Autonomous Object Identification System " />

    <com.example.dummy.automo.QTextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:textColor="#000000"
        android:textSize="15dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="Library Module 1.0 " />

    <ImageView
        android:id="@+id/bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/text2"
        android:background="@drawable/bar"
        android:layout_marginTop="10dp"/>

    <com.example.dummy.automo.QTextView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:background="@drawable/round_bg_accent"
        android:gravity="center"
        android:text="A"
        android:textColor="#ffffff"
        android:textSize="75dp" />

    <com.example.dummy.automo.QEditText
        android:id="@+id/username"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:background="@drawable/oval_bg_primary"
        android:hint="Username"
        android:maxLength="40"
        android:padding="16dp"
        android:singleLine="true"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:textSize="15dp" />

    <com.example.dummy.automo.QEditText
        android:id="@+id/password"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/username"
        android:layout_below="@+id/username"
        android:layout_marginTop="10dp"
        android:background="@drawable/oval_bg_primary"
        android:hint="Password"
        android:inputType="textPassword"
        android:maxLength="40"
        android:padding="16dp"
        android:singleLine="true"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:textSize="15dp" />

    <Button
        android:id="@+id/log"
        android:layout_width="300dp"
        android:typeface="sans"
        android:layout_height="wrap_content"
        android:layout_below="@+id/password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="Login" />

</RelativeLayout>
